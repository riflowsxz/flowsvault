# ===========================================
# FLOWSVAULT ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env or .env.local and fill in the values

# -----------------------------------------
# Database Configuration
# -----------------------------------------
POSTGRES_URL=postgresql://username:password@localhost:5432/flowsvault

# -----------------------------------------
# NextAuth Configuration
# -----------------------------------------
NEXTAUTH_SECRET=your-secret-key-at-least-32-characters-long-random-string
NEXTAUTH_URL=http://localhost:3000

# -----------------------------------------
# OAuth Providers (Google & GitHub)
# -----------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_ID=your-github-client-id
GITHUB_SECRET=your-github-client-secret

# -----------------------------------------
# Cloudflare R2 Storage Configuration
# -----------------------------------------
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_R2_BUCKET=your-bucket-name
# Optional: Public URL for R2 bucket (if you configured custom domain or R2.dev URL)
CLOUDFLARE_R2_PUBLIC_BASE_URL=https://your-bucket-name.your-account-id.r2.dev

# -----------------------------------------
# App Configuration
# -----------------------------------------
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# Max upload size in bytes (100MB = 104857600)
NEXT_PUBLIC_MAX_UPLOAD_SIZE=104857600

# -----------------------------------------
# Upload Configuration (Optional)
# -----------------------------------------
UPLOAD_MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads
UPLOAD_SECRET_KEY=your-upload-secret-key-at-least-32-characters-long

# -----------------------------------------
# Redis Configuration (Rate Limiting)
# -----------------------------------------
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# -----------------------------------------
# Admin Configuration
# -----------------------------------------
ADMIN_API_KEY=your-admin-api-key-at-least-32-characters-long

# -----------------------------------------
# NOTES:
# -----------------------------------------
# 1. Never commit this file with real credentials to version control
# 2. Use strong, randomly generated keys for secrets (32+ characters)
# 3. Rate limiting requires Upstash Redis (free tier available)
# 4. Enhanced per-user rate limiting is automatically enabled
